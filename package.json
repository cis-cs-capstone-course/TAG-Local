{
  "name": "TAG",
  "version": "1.0.0",
  "description": "A text annotation engine",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-packager . --icon=./assets/tag.ico --overwrite",
    "build": "electron-builder ."
  },
  "build": {
    "appId": "TAG",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/tag.ico",
      "extraResources": [
        {
          "from": "py",
          "to": "py",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": [
        "deb",
        "AppImage",
        "rpm"
      ],
      "icon": "assets/icons",
      "category": "Utility",
      "extraResources": [
        {
          "from": "py",
          "to": "py",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/512x512.png",
      "category": "Utility",
      "extraResources": [
        {
          "from": "py",
          "to": "py",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "TAG Team <keith.hudock@gmail.com>",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-builder": "^21.2.0",
    "spectron": "^9.0.0"
  },
  "dependencies": {
    "electron-packager": "^14.1.0",
    "jquery": "^3.4.1",
    "path": "^0.12.7",
    "python-shell": "^1.0.8"
  }
}
